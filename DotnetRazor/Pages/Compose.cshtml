@page
@model DotnetRazor.Pages.ComposeModel
@{
    ViewData["Title"] = "Compose Post";
}

<h1>Compose Post</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Post.Title"></label>
        <input class="form-control" asp-for="Post.Title" />
    </div>
    <div class="form-group">
        <label asp-for="Post.Body"></label>
        <textarea class="form-control" asp-for="Post.Body" rows="6"></textarea>
    </div>
    <button class="btn btn-primary">Publish</button>
</form>
